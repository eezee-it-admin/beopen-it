<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="portal_timesheet_entry" model="res.groups">
            <field name="name">Portal Timesheet Creation</field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="analytic_line_portal" model="ir.rule">
            <field name="name">Analytic Line: portal users: portal</field>
            <field name="model_id" ref="account.model_account_analytic_line"/>
            <field name="domain_force">[
                '|',('user_id', '=', user.id),('partner_id', '=', user.partner_id.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

    </data>
</odoo>


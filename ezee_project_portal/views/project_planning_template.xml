<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="portal_my_home_project_planning_slots" name="Portal My Home : Project Planning Slots" inherit_id="portal.portal_my_home" priority="45">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Planning Slots</t>
                <t t-set="url" t-value="'/my/planning_slots'"/>
                <t t-set="count" t-value="planning_slots_count"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_slots" name="My Slots">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Planning Slots</t>
            </t>
            <t t-if="not grouped_slots">
                <div class="alert alert-warning mt8" role="alert">
                    There are no slots.
                </div>
            </t>
            <t t-if="grouped_slots">
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_slots" t-as="slots">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th t-if="groupby != 'none'" colspan="8">
                                    <em class="font-weight-normal text-muted">
                                        Planning slots for project:
                                    </em>
                                    <span t-field="slots[0].sudo().project_id.name"/>
                                </th>
                            </tr>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th>#</th>
                                <th class="text-left">Employee</th>
                                <th class="text-center">Task</th>
                                <th class="text-left">Role</th>
                                <th class="text-center">Stat Date</th>
                                <th class="text-center">End Date</th>
                                <th class="text-right">Allocated Hours</th>
                                <th class="text-right">Allocated Time (%)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach='slots' t-as='slot' style="cursor: pointer;"
                                class="button-slot-details" t-att-data-slot_id="slot.id">
                                <td>
                                    #<span t-field="slot.id"/>
                                </td>
                                <td class="text-left">
                                    <span t-esc="slot.sudo().employee_id.name"/>
                                </td>
                                <td class="text-right">
                                    <a t-if="slot.task_id" t-attf-href="/my/task/#{slot.task_id.id}?{{ keep_query() }}">
                                        <span t-field="slot.task_id"/>
                                    </a>
                                </td>
                                <td class="text-left">
                                    <span t-esc="slot.sudo().role_id.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="slot.start_datetime"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="slot.end_datetime"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="slot.allocated_hours"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="slot.allocated_percentage"/>
                                </td>
                            </tr>
                        </tbody>
                    </t>
                </t>
            </t>
            <div class="modal fade" id="eezee-slot-modal" role="dialog">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0"/>
                </div>
            </div>
        </t>
    </template>

    <template id="modal_content">
        <div class="modal-header modal-header-primary py-3 border-0 rounded-top text-light" t-att-style="'background-color: ' + color">
            <h5 class="modal-title" t-esc="display_name"/>
            <button type="button" class="close text-light shadow-none" data-dismiss="modal">
                <span aria-label="Close">&amp;times;</span>
            </button>
        </div>
        <div class="modal-body">
            <dl class="row mt-0 mb-0">
                <dt class="col-sm-4">Employee:</dt>
                <dd class="col-sm-8" t-esc="employee"/>
                <dt class="col-sm-4">Start Date:</dt>
                <dd class="col-sm-8" t-esc="start_datetime"/>
                <dt class="col-sm-4">Stop Date:</dt>
                <dd class="col-sm-8" t-esc="end_datetime"/>
                <dt class="col-sm-4">Allocated Hours:</dt>
                <dd class="col-sm-8" t-esc="allocated_hours"/>
                <t t-if="project">
                    <dt class="col-sm-4">Project:</dt>
                    <dd class="col-sm-8" t-esc="project"/>
                </t>
                <t t-if="task">
                    <dt class="col-sm-4">Task:</dt>
                    <dd class="col-sm-8">
                        <a t-if="task_id" target="_blank" t-attf-href="/my/task/#{task_id}?{{ keep_query() }}">
                            <span t-esc="task"/>
                        </a>
                    </dd>
                </t>
                <dt class="col-sm-4">Note:</dt>
                <dd class="col-sm-8" t-esc="name"/>
            </dl>
        </div>
    </template>

</odoo>

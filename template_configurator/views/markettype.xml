<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree view for MarketType -->
    <record model="ir.ui.view" id="botc_markettype_tree_view">
        <field name="name">botc_markettype.tree</field>
        <field name="model">botc.markettype</field>
        <field name="arch" type="xml">
            <tree string="MatketType Tree">
                <field name="name"/>
                <field name="market_id"/>
                <field name="goal_id"/>
            </tree>
        </field>
    </record>

    <!-- Form view for MarketType -->
    <record model="ir.ui.view" id="botc_markettype_form_view">
        <field name="name">botc_markettype.form</field>
        <field name="model">botc.markettype</field>
        <field name="arch" type="xml">
            <form string="MarketType Form">
                <sheet>

                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </group>


                    <div>
                        <group>
                            <field name="code"/>
                            <field name="product_template_id"/>
                            <field name="market_id"/>
                            <field name="goal_id"/>
                            <field name="template_ids" widget="many2many_tags"/>
                            <field name="preferred_flavor_id"/>
                        </group>
                    </div>

                    <separator/>

                    <div>
                        <group>

                            <field name="available_module_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="module_id"/>
                                    <field name="flavor_id"/>
                                    <field name="included"/>
                                    <field name="order"/>
                                </tree>
                            </field>
                        </group>

                    </div>

                    <separator/>

                    <div>
                        <group>
                            <field name="available_service_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="service_id"/>
                                    <field name="flavor_id"/>
                                    <field name="order"/>
                                </tree>
                            </field>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for MarketType -->
    <record model="ir.actions.act_window" id="botc_markettype_list_action">
        <field name="name">Market Types</field>
        <field name="res_model">botc.markettype</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create Market Types
            </p>
        </field>
    </record>

    <menuitem id="markettypes_menu" name="Types" parent="configurator_template_configurator_menu"
                  action="botc_markettype_list_action" sequence="1"/>
</odoo>

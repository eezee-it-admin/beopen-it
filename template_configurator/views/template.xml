<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <!-- Tree view for Template -->
    <record model="ir.ui.view" id="botc_template_tree_view">
        <field name="name">botc_template.tree</field>
        <field name="model">botc.template</field>
        <field name="arch" type="xml">
            <tree string="Template Tree">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form view for Template -->
    <record model="ir.ui.view" id="botc_template_form_view">
        <field name="name">botc_template.form</field>
        <field name="model">botc.template</field>
        <field name="arch" type="xml">
            <form string="Execution Log Form">
                <sheet>
                    <h1>
                        <group>
                            <field name="name"/>
                        </group>
                    </h1>
                    <group>
                        <field name="template_username"/>
                        <field name="template_password" password="True"/>
                        <field name="template_apps_location"/>
                        <field name="template_backup_location"/>
                        <field name="docker_image_id"/>
                        <field name="markettype_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Template -->
    <record model="ir.actions.act_window" id="botc_template_list_action">
        <field name="name">Templates</field>
        <field name="res_model">botc.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">View Templates
            </p>
        </field>
    </record>

    <menuitem id="templates_menu" name="Templates" parent="configuration_template_configurator_menu"
                  action="botc_template_list_action" groups="template_configurator.group_configurator_administrator" sequence="10"/>
</odoo>

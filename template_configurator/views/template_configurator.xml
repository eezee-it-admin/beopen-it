<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Tree view for Market -->
        <record model="ir.ui.view" id="botc_market_tree_view">
            <field name="name">botc_market.tree</field>
            <field name="model">botc.market</field>
            <field name="arch" type="xml">
                <tree string="Market Tree">
                    <field name="name"/>
